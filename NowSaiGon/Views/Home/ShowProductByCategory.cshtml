
@{
    ViewData["Title"] = "ShowProductByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TblProduct>


<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Tất cả sản phẩm</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@item.Avatar">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@item.ProId">@item.ProName</a></h6>
                            <h5>@item.PriceSale VNĐ</h5>

                        </div>
                    </div>
                    @*  <div class="product__discount__item">
                <div class="product__discount__item__pic set-bg" data-setbg="@item.Avatar" style="background-image: url(&quot;img/product/discount/pd-5.jpg&quot;);">
                <div class="product__discount__percent">-20%</div>
                <ul class="product__item__pic__hover">
                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
                </div>
                <div class="product__discount__item__text">
                <h5><a href="#">@item.ProName</a></h5>
                <div class="product__item__price">@item.PriceSale VNĐ<span>@item.Price</span></div>
                </div>
                </div>*@
                </div>

            }

        </div>
        <div class="product__pagination">
            @Html.PagedListPager(Model,page=>Url.Action("ShowProductByCategory",new{page=page,id = ViewBag.Id}))

        </div>
    </div>
</section>
<!-- Featured Section End -->